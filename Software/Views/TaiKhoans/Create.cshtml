@model Software.Models.TaiKhoan

@{
    ViewData["Title"] = "Create";
}
<style>
    :root{
        --warning: rgb(207, 207, 2);
        --success : rgb(0, 128, 0);
        --error : rgb(255, 0, 0);
        --warning-check: rgba(207, 207, 15);
        --success-check: rgba(0, 128, 0, 0.7);
        --error-check: rgba(255, 0, 0,0.7);
    }
    .success{
        background: var(--success);
    }
    .warning{
        background: var(--warning);
    }
    .error{
        background: var(--error);
    }
    .notification{
        position: fixed;
        top: 20px;
        right: 20px;
    }
    .notification-item{
        padding: 16px;
        width: 300px;
        color: white;
        display: flex;
        align-items: center;
        justify-content: space-around;
        margin-bottom: 15px;
    }
    .success-check{
        background: var(--success-check);
        border-left: 6px solid var(--success);
    }
    .warning-check {
        background: var(--warning-check);
        border-left: 6px solid var(--warning);
    }
    .error-check {
        background: var(--error-check);
        border-left: 6px solid var(--error);
    }
    /* hieu ung */

    .slideOn{
        animation: slideOn 2s 1 linear forwards;
    }
    .slideHides{
        animation: slideHide 2s 1 linear forwards;
    }
    @@keyframes slideOn{
        0%{
            transform: translateX(100%);
        }
        25%{
            transform: translateX(-10%);
        }
        50%{
            transform: translateX(0%);
        }
        100%{
            transform: translateX(-10px);
        }
    }
    @@keyframes slideHide{
        0%{
            transform: translateX(-10%);
        }
        25%{
            transform: translateX(0%);
        }
        50%{
            transform: translateX(-15%);
        }
        100%{
            transform: translateX(200%);
        }
    
    }
</style>

<div class="title d-flex align-items-center mt-3" style="margin-left: 60px;padding-block:20px">
    <i class='bx bx-chevron-left' style="background-color: black; color: red; border-radius: 50%; font-size: 20px; padding: 3px;"></i>
    <h4 style="margin: 0; margin-left: 10px;font-size:24px;font-weight:800">ĐĂNG KÝ TÀI KHOẢN KHÁCH HÀNG</h4>
</div>

<form method="post" class="mt-3 pb-4 w-[90%] m-auto shadow-md" action="" style=" background-color: white; padding-left: 40px; padding-right: 40px; padding-top: 30px; border-radius: 10px;">
    <div class="row">
        <div class="col-8">
            <div class="name form-group">
                <label asp-for="TenKhachHang" style="font-weight: bold;" for="">Họ tên</label>
                <br>
                <input id="TenKH" class="border-2 border-gray-200 bg-gray-100 focus:bg-white outline-none w-[90%] rounded-md px-3 py-2 mb-3 mt-2" asp-for="TenKhachHang" type="text">
            </div>
        </div>
        <div class="col-4 form-group">
            <div class="money">
                <label asp-for="SoDT" style="font-weight: bold;" for="">Số điện thoại</label>
                <br>
                <input id="SDT" class="border-2 border-gray-200 bg-gray-100 focus:bg-white outline-none w-full rounded-md px-3 py-2 mb-3 mt-2" asp-for="SoDT" type="text">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 form-group">
            <div class="name-account mt-3">
                <label asp-for="TenTK" style="font-weight: bold;" for="">Tên tài khoản</label>
                <br>
                <input id="TenTK" class="border-2 border-gray-200 bg-gray-100 focus:bg-white outline-none w-full rounded-md px-3 py-2 mb-3 mt-2" asp-for="TenTK" type="text">
                <span asp-validation-for="TenTK" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8">
            <div class="pass mt-3 form-group">
                <label asp-for="MatKhau" style="font-weight: bold;" for="">Mật khẩu</label>
                <br>
                <input id="MatKhau" class="border-2 border-gray-200 bg-gray-100 focus:bg-white outline-none w-[90%] rounded-md px-3 py-2 mb-3 mt-2" asp-for="MatKhau" type="text">
            </div>
        </div>
        <div class="col-4">
            <div class="phone mt-3 form-group">
                <label asp-for="SoDu" style="font-weight: bold;" for="">Số tiền</label>
                <br>
                <input id="SoDu" class="border-2 border-gray-200 bg-gray-100 focus:bg-white outline-none w-full rounded-md px-3 py-2 mb-3 mt-2" asp-for="SoDu" type="text" placeholder="(0)">
            </div>
        </div>
    </div>
    <div class="notification">

    </div>
    <div class="form-group save-wrapper mt-[40px] mb-[20px] user-select-none" style="text-align: center; cursor: pointer;display:flex;justify-content:center; align-items:center;gap:22px">
        <div class="reset hover:scale-x-90 duration-300 ease-in-out w-[140px] h-[40px] flex items-center justify-content-center" style="background-color: #FF4646; color: white; border-radius: 50px; font-weight: 500;">Làm mới</div>
        <button type="submit" class="postData hover:scale-x-90 duration-300 ease-in-out w-[140px] h-[40px] flex items-center justify-content-center" style="background-color: #1D8EE2; color: white; border-radius: 50px; font-weight: 500;">Lưu thông tin</button>
        
    </div>
</form>
<script>
    var tenkh = document.getElementById("TenKH")
    var sdt = document.getElementById("SDT")
    var tentk = document.getElementById("TenTK")
    var mk = document.getElementById("MatKhau")
    var sodu = document.getElementById("SoDu")
    var notification = document.querySelector('.notification')
    document.querySelector('.reset').addEventListener('click', function () {
        tenkh.value = "";
        sdt.value = "";
        tentk.value = "";
        mk.value = ""
        sodu.value = ""
    });
    document.querySelector('.postData').addEventListener('click', function (event) {
        event.preventDefault();
        if (tenkh.value.trim() === "" || sdt.value.trim() === "" || tentk.value.trim() === "" || mk.value.trim() === "" || sodu.value.trim() === "") {
           createStatus("error","Vui lòng điền đầy đủ thông tin !!!")

        } else {
            setTimeout(() => {
                document.querySelector("form").submit();

            }, 4000);
            createStatus("warning", "Đang thực hiện đăng kí !!!")
           
            
        }
    })
    function createStatus(val,message) {
        let notificationItem = document.createElement('div');
        notificationItem.classList.add('notification-item');
        notification.appendChild(notificationItem);
        let className = '';
        switch (val) {
            case 'success':        
                className = 'success-check';
                break;
            case 'warning':
                className = 'warning-check';
                break;
            case 'error':
                className = 'error-check';
                break;
            default:
                break;
        }
        notificationItem.innerHTML = `
            <p>${message}</p>
        `;
        notificationItem.classList.add(className, 'slideOn');


        setTimeout(() => {
            notificationItem.classList.remove('slideOn');
            setTimeout(() => {
                notificationItem.classList.add('slideHides');

            }, 100);
        }, 3000)
        setTimeout(() => {
            notification.removeChild(notificationItem);
        }, 6000)
    }

</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
