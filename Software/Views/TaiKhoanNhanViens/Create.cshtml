@model Software.Models.TaiKhoanNhanVien

@{
    ViewData["Title"] = "Create";
}

<div class="py-8 px-12">
    <h2 class="text-[32px] text-Jaguar font-bold pl-5">THÔNG TIN NHÂN SỰ</h2>
    <div class="bg-White rounded-2xl !mt-5 flex rounded-lg">
        <ul class="[&_*]:text-xl [&_*]:font-medium [&_*]:text-Gray px-3.5 py-10 w-56">
            <li>
                <a class="py-2 px-3.5 rounded-lg flex items-center justify-between" asp-action="Edit" asp-route-id="@ViewData["MaNV"]" asp-controller="NhanViens">
                    <span>Chi tiết</span>
                    <svg class="invisible" xmlns="http://www.w3.org/2000/svg" width="13" height="7" viewBox="0 0 13 7" fill="none">
                        <path d="M8.5 6L11 3.5M11 3.5L8.5 1M11 3.5L1 3.5" stroke="#1F1E30" stroke-width="2" stroke-linecap="round" />
                    </svg>
                </a>
            </li>
            <li>
                <a class="bg-Lavender py-2 px-3.5 rounded-lg flex items-center justify-between" asp-action="Create">
                    <span class="!text-Jaguar">Tài khoản</span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="13" height="7" viewBox="0 0 13 7" fill="none">
                        <path d="M8.5 6L11 3.5M11 3.5L8.5 1M11 3.5L1 3.5" stroke="#1F1E30" stroke-width="2" stroke-linecap="round" />
                    </svg>
                </a>
            </li>
        </ul>
        <div class="w-[3px] rounded-full bg-Cultured my-6"></div>
        <div>
            <h1>Create</h1>

            <h4>TaiKhoanNhanVien</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="TenTK" class="control-label"></label>
                            <input asp-for="TenTK" class="form-control" />
                            <span asp-validation-for="TenTK" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MaKhau" class="control-label"></label>
                            <input asp-for="MaKhau" class="form-control" />
                            <span asp-validation-for="MaKhau" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MaNV" class="control-label"></label>
                            <input asp-for="MaNV" class="form-control" value="@ViewData["MaNV"]">
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
