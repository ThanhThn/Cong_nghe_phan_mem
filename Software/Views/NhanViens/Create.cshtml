@model Software.Models.NhanVien

@{
    ViewData["Title"] = "Create NhanVien";
    var chucVuList = ViewData["MaChucVu"] as IEnumerable<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>;
}

<h1>Create NhanVien</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="MaNV" class="control-label"></label>
        <input asp-for="MaNV" class="form-control" />
        <span asp-validation-for="MaNV" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TenNhanVien" class="control-label"></label>
        <input asp-for="TenNhanVien" class="form-control" />
        <span asp-validation-for="TenNhanVien" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SoDienThoai" class="control-label"></label>
        <input asp-for="SoDienThoai" class="form-control" />
        <span asp-validation-for="SoDienThoai" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DiaChi" class="control-label"></label>
        <input asp-for="DiaChi" class="form-control" />
        <span asp-validation-for="DiaChi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GioiTinh" class="control-label"></label>
        <select asp-for="GioiTinh" class="form-control">
            <option value="true">Nam</option>
            <option value="false">Nữ</option>
        </select>
        <span asp-validation-for="GioiTinh" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ChungMinhThu" class="control-label"></label>
        <input asp-for="ChungMinhThu" class="form-control" />
        <span asp-validation-for="ChungMinhThu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaChucVu" class="control-label"></label>
        <select asp-for="MaChucVu" class="form-control" asp-items="chucVuList"></select>
        <span asp-validation-for="MaChucVu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
